  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NetVips" Version="2.1.0" />
    <PackageReference Include="NetVips.Native" Version="8.12.2" />
  </ItemGroup>

  <ItemGroup>
    <None Update="fonts\ChollaSans-Italic.ttf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="fonts\ChollaSans-Thin.ttf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="fonts\Kremlin II Pro-Regular.ttf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
